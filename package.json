{
  "name": "resonix-monorepo",
  "version": "0.2.8",
  "description": "Monorepo for Resonix JS packages and examples",
  "license": "BSD-3-Clause",
  "author": "Resonix OSS Team",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/resonix-dev/resonix.git"
  },
  "homepage": "https://resonix.dev",
  "bugs": {
    "url": "https://github.com/resonix-dev/resonix/issues"
  },
  "workspaces": [
    "packages/*",
    "packages/@resonix/*",
    "example"
  ],
  "scripts": {
    "build": "cd packages/resonix && pnpm build",
    "build:watch": "cd packages/resonix && pnpm build -- --watch",
    "format": "prettier --write .",
    "lint": "echo 'No linter configured'",
    "clean": "rimraf **/dist",
    "dev": "cd packages/resonix && pnpm build -- --watch",
    "download": "node helpers/download.js",
    "update:versions": "node helpers/updateVersions.js",
    "example": "pnpm --filter resonix-discord-bot start",
    "release": "echo 'Use changesets or manual versioning (not yet configured)'"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "extract-zip": "^2.0.1",
    "node-fetch": "^3.3.2",
    "tar": "^7.4.3"
  }
}
